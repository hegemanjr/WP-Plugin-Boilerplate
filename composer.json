{
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "lint:wpcs": "@php ./vendor/bin/phpcs --standard=WordPress --ignore=**/vendor/**,**/node_modules/**,/build/ .",
        "lint:autofix": "@php ./vendor/bin/phpcbf --standard=WordPress --ignore=**/vendor/**,**/node_modules/**,/build/ .",
        "lint:php": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor ."
    }
}
